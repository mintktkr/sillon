  "description": "üõãÔ∏è Modern CouchDB CLI - interactive, fuzzy-finding, visual replication",
  "module": "src/index.ts",
  "type": "module",
  "bin": {
    "sillon": "./dist/index.js",
    "sll": "./dist/index.js"
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outfile=dist/index.js --target=node --minify",
    "build:debug": "bun build src/index.ts --outfile=dist/index.js --target=node",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "format": "biome format . --write",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
